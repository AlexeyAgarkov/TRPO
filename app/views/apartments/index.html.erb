<h1>Список объектов, доступных для продажи или покупки</h1>

<table>
  <thead>
    <tr>
      <th>Название</th>
      <th>Описание</th>
      <th>Цена</th>
      <th>Местоположение</th>
      <th colspan="5"></th>
    </tr>
  </thead>
  
  <tbody>
    <% @apartments.each do |apartment| %>
      <tr>
        <td><%= apartment.title %></td>
        <td><%= apartment.description %></td>
        <td><%= apartment.price %></td>
        <td><%= apartment.location %></td>
        <td><%= link_to 'Просмотреть', apartment %></td>
        <td><%= link_to 'Редактировать', edit_apartment_path(apartment) %></td>
        <td><%= link_to 'Удалить', apartment, 'data-turbo-method': :delete, data: { confirm: 'Вы уверены?' } %></td>
         <%= form_with(url: cart_add_path) do |f| %>
      <td><%= f.hidden_field :id, value: apartment.id %>
      <%= f.number_field :quantity, value: 0, min: 1 %>
      <%= f.submit "Add To Cart" %></td>
    <% end %> 
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to 'Добавить объект', new_apartment_path %></p>
<style>
    h1 {
      font-size: 24px;
      color: #333;
      margin-bottom: 20px;
    }

    table {
      width: 100%;
      border-collapse: collapse;
    }

    thead th {
      background-color: #007bff;
      color: #fff;
      padding: 10px;
      text-align: left;
    }

    tbody td {
      padding: 10px;
      border-bottom: 1px solid #ccc;
    }

    tbody tr:hover {
      background-color: #f0f0f0;
    }

    .actions a {
      display: inline-block;
      padding: 5px 10px;
      background-color: #007bff;
      color: #fff;
      text-decoration: none;
      border-radius: 3px;
      margin-right: 5px;
    }

    .actions a:hover {
      background-color: #0056b3;
    }

    .actions form {
      display: inline-block;
    }
  </style>