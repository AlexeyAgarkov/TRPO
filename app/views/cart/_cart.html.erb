<nav class="navbar">
  <ul class="navbar-nav horizontal-nav">
    <li class="nav-item">
      <%= link_to "Главная", root_path, class: "nav-link" %>
    </li>
    <li class="nav-item">
      <%= link_to "Закладки", cart_path,  class: "nav-link" %>
    </li>
    <% if current_user %>
      <li class="nav-item">
        <%= link_to "Профиль", apartments_path, class: "nav-link" %>
      </li>
      <li class="home-buttons">
        <%= link_to "Выход", destroy_user_session_path, 'data-turbo-method': :delete, class: "sign-out"%>
      </li>
    <% else %>
      <li class="home-buttons">
        <%= link_to "Sign In", new_user_session_path, class: "log-in" %>
      </li>
      <li class="home-buttons">
        <%= link_to "Sign Up", new_user_registration_path, class: "sign-up" %>
      </li>
    <% end %>
  </ul>
</nav>
<%= turbo_frame_tag "cart" do %>
  <h1>Закладки</h1>
  <% if @cart.orderables.count > 0 %>
    <%= render "cart/orderables" %>
    <p>Всего: <%= @cart.total %></p>
  <% else %>
    <p>У вас нет объктов в закладках</p>
  <% end %>
<% end %>
<style>
    .navbar {
      background-color: #007bff;
      padding: 10px;
    }

    .navbar-nav {
      list-style: none;
      margin: 0;
      padding: 0;
      display: flex;
    }

    .nav-item {
      margin-right: 10px;
    }

    .nav-link {
      color: #fff;
      text-decoration: none;
      padding: 5px 10px;
      border-radius: 5px;
    }

    .nav-link:hover {
      background-color: #0056b3;
    }

    .home-buttons {
      margin-left: auto;
    }

    .sign-out {
      color: #fff;
      text-decoration: none;
    }

    .sign-out:hover {
      text-decoration: underline;
    }

    .log-in, .sign-up {
      color: #fff;
      text-decoration: none;
      padding: 5px 10px;
      border-radius: 5px;
      border: 1px solid #fff;
    }

    .log-in:hover, .sign-up:hover {
      background-color: #0056b3;
    }
  </style>